{
  "configurations": [
    {
      "configId": "HR-P327-001",
      "jobName": "p327",
      "sourceSystem": "hr",
      "targetTable": "CUSTOMER_DATA",
      "fileType": "PIPE_DELIMITED",
      "filePathPattern": "/data/input/hr/p327/*.dat",
      "controlFileTemplate": "pipe-delimited-control-template.ctl",
      "fieldDelimiter": "|",
      "recordDelimiter": "\n",
      "headerRows": 1,
      "maxErrors": 1000,
      "parallelDegree": 1,
      "validationEnabled": "Y",
      "preLoadValidation": "Y",
      "postLoadValidation": "Y",
      "backupEnabled": "Y",
      "backupPath": "/data/backup/hr/p327/",
      "archiveEnabled": "Y",
      "archivePath": "/data/archive/hr/p327/",
      "encryptionRequired": "N",
      "piiData": "Y",
      "dataClassification": "CONFIDENTIAL",
      "retentionDays": 2555,
      "notificationEmails": "dataops@truist.com,hr-team@truist.com",
      "description": "HR system P327 customer data loading with comprehensive validation",
      "enabled": "Y"
    },
    {
      "configId": "FIN-ACCT-002",
      "jobName": "account_data",
      "sourceSystem": "finance",
      "targetTable": "ACCOUNT_TRANSACTIONS",
      "fileType": "PIPE_DELIMITED",
      "filePathPattern": "/data/input/finance/accounts/*.dat",
      "controlFileTemplate": "pipe-delimited-control-template.ctl",
      "fieldDelimiter": "|",
      "recordDelimiter": "\n",
      "headerRows": 1,
      "maxErrors": 500,
      "parallelDegree": 2,
      "validationEnabled": "Y",
      "preLoadValidation": "Y",
      "postLoadValidation": "Y",
      "backupEnabled": "Y",
      "backupPath": "/data/backup/finance/accounts/",
      "archiveEnabled": "Y",
      "archivePath": "/data/archive/finance/accounts/",
      "encryptionRequired": "Y",
      "piiData": "Y",
      "dataClassification": "RESTRICTED",
      "retentionDays": 2555,
      "notificationEmails": "dataops@truist.com,finance-team@truist.com",
      "description": "Financial account transaction data with enhanced security",
      "enabled": "Y"
    }
  ],
  "validationRules": [
    {
      "configId": "HR-P327-001",
      "fieldName": "CUSTOMER_ID",
      "ruleType": "REQUIRED_FIELD_VALIDATION",
      "dataType": "INTEGER",
      "requiredField": "Y",
      "errorMessage": "Customer ID is required and must be numeric",
      "executionOrder": 1,
      "enabled": "Y"
    },
    {
      "configId": "HR-P327-001",
      "fieldName": "CUSTOMER_ID",
      "ruleType": "DATA_TYPE_VALIDATION",
      "dataType": "INTEGER",
      "validationExpression": "^[0-9]+$",
      "errorMessage": "Customer ID must be a valid integer",
      "executionOrder": 2,
      "enabled": "Y"
    },
    {
      "configId": "HR-P327-001",
      "fieldName": "CUSTOMER_NAME",
      "ruleType": "LENGTH_VALIDATION",
      "dataType": "STRING",
      "maxLength": 100,
      "minLength": 2,
      "errorMessage": "Customer name must be between 2 and 100 characters",
      "executionOrder": 3,
      "enabled": "Y"
    },
    {
      "configId": "HR-P327-001",
      "fieldName": "EMAIL",
      "ruleType": "EMAIL_VALIDATION",
      "dataType": "STRING",
      "maxLength": 255,
      "pattern": "^[A-Za-z0-9+_.-]+@[A-Za-z0-9.-]+\\.[A-Za-z]{2,}$",
      "errorMessage": "Invalid email format",
      "executionOrder": 4,
      "enabled": "Y"
    },
    {
      "configId": "HR-P327-001",
      "fieldName": "PHONE",
      "ruleType": "PHONE_VALIDATION",
      "dataType": "STRING",
      "maxLength": 20,
      "pattern": "^\\+?[1-9]\\d{1,14}$",
      "errorMessage": "Invalid phone number format",
      "executionOrder": 5,
      "enabled": "Y"
    },
    {
      "configId": "FIN-ACCT-002",
      "fieldName": "ACCOUNT_NUMBER",
      "ruleType": "REQUIRED_FIELD_VALIDATION",
      "dataType": "STRING",
      "requiredField": "Y",
      "errorMessage": "Account number is required",
      "executionOrder": 1,
      "enabled": "Y"
    },
    {
      "configId": "FIN-ACCT-002",
      "fieldName": "ACCOUNT_NUMBER",
      "ruleType": "ACCOUNT_NUMBER_VALIDATION",
      "dataType": "STRING",
      "maxLength": 20,
      "minLength": 8,
      "pattern": "^[A-Z0-9]{8,20}$",
      "errorMessage": "Account number must be 8-20 alphanumeric characters",
      "executionOrder": 2,
      "enabled": "Y"
    },
    {
      "configId": "FIN-ACCT-002",
      "fieldName": "TRANSACTION_AMOUNT",
      "ruleType": "NUMERIC_VALIDATION",
      "dataType": "DECIMAL",
      "validationExpression": "^-?\\d+(\\.\\d{1,2})?$",
      "errorMessage": "Transaction amount must be a valid decimal with up to 2 decimal places",
      "executionOrder": 3,
      "enabled": "Y"
    },
    {
      "configId": "FIN-ACCT-002",
      "fieldName": "TRANSACTION_DATE",
      "ruleType": "DATE_FORMAT_VALIDATION",
      "dataType": "DATE",
      "pattern": "yyyy-MM-dd",
      "errorMessage": "Transaction date must be in YYYY-MM-DD format",
      "executionOrder": 4,
      "enabled": "Y"
    }
  ]
}