{
  "name": "batch-config-ui",
  "version": "1.0.0",
  "description": "React frontend for Batch Configuration Tool",
  "private": true,
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@monaco-editor/react": "^4.7.0",
    "@mui/icons-material": "^5.17.1",
    "@mui/material": "^5.17.1",
    "@testing-library/dom": "^8.20.1",
    "axios": "^1.9.0",
    "js-yaml": "^4.1.0",
    "monaco-editor": "^0.37.1",
    "react": "^18.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.57.0",
    "react-router-dom": "^6.30.1",
    "react-scripts": "^5.0.1",
    "recharts": "^2.15.4",
    "web-vitals": "^3.5.2"
  },
  "devDependencies": {
    "@emotion/jest": "^11.13.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^16.18.68",
    "@types/react": "^18.2.45",
    "@types/react-beautiful-dnd": "^13.1.8",
    "@types/react-dom": "^18.2.18",
    "chart.js": "^4.5.0",
    "jest-html-reporters": "^3.1.7",
    "jest-junit": "^16.0.0",
    "react-chartjs-2": "^5.3.0",
    "ts-jest": "^29.4.0",
    "typescript": "^4.9.5",
    "@types/selenium-webdriver": "^4.1.22",
    "selenium-webdriver": "^4.21.0",
    "chromedriver": "^122.0.6",
    "geckodriver": "^4.4.4",
    "webdriver-manager": "^12.1.9",
    "@wdio/cli": "^8.38.2",
    "@wdio/local-runner": "^8.38.2",
    "@wdio/mocha-framework": "^8.38.0",
    "@wdio/spec-reporter": "^8.38.0",
    "wdio-chromedriver-service": "^8.1.1",
    "wdio-geckodriver-service": "^5.0.2",
    "mocha": "^10.4.0",
    "@types/mocha": "^10.0.6",
    "chai": "^4.4.1",
    "@types/chai": "^4.3.16",
    "allure-commandline": "^2.29.0",
    "@wdio/allure-reporter": "^8.38.2",
    "cross-env": "^7.0.3",
    "wait-on": "^7.2.0",
    "concurrently": "^8.2.2",
    "axe-core": "^4.9.1",
    "@axe-core/webdriverjs": "^4.9.1",
    "lighthouse": "^11.7.1",
    "puppeteer": "^22.10.0",
    "@types/puppeteer": "^7.0.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:unit": "react-scripts test --watchAll=false --coverage",
    "test:e2e": "wdio run ./wdio.conf.js",
    "test:e2e:headless": "wdio run ./wdio.conf.js --headless",
    "test:e2e:chrome": "wdio run ./wdio.conf.js --browsers=chrome",
    "test:e2e:firefox": "wdio run ./wdio.conf.js --browsers=firefox",
    "test:accessibility": "node scripts/accessibility-test.js",
    "test:performance": "node scripts/performance-test.js",
    "test:integration": "concurrently \"npm run start\" \"wait-on http://localhost:3000 && npm run test:e2e\" --kill-others --success first",
    "test:full": "npm run test:unit && npm run test:integration",
    "webdriver:update": "webdriver-manager update",
    "eject": "react-scripts eject",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,json}\""
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "^axios$": "axios/dist/node/axios.cjs"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(axios)/)"
    ]
  },
  "proxy": "http://localhost:8080"
}
